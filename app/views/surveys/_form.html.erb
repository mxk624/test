<%= form_with model: @survey, local: true do |f| %>
  <div class="form-group">
    <%= f.label :body_part_id, "あなたの肌悩みの該当部位を教えて下さい。", class: "form-label" %>
    <%= f.collection_select(:body_part_id, @body_parts, :id, :name, {}, { class: "form-control" }) %>
  </div>
  <div class="form-group">
    <%= f.label :skin_concern_id, "あなたの肌悩みを教えて下さい。", class: "form-label" %>
    <%= f.collection_select(:skin_concern_id, @skin_concerns, :id, :concern, {}, { class: "form-control" }) %>
  </div>
  <div class="form-group">
    <%= f.label :environment_id, "日常的にどのような環境にいますか？", class: "form-label" %>
    <%= f.collection_select(:environment_id, @environments, :id, :environment_type, {}, { class: "form-control" }) %>
  </div>
  <div class="form-group">
    <%= f.label :skin_type_id, "あなたの肌質はどのタイプですか？", class: "form-label" %>
    <%= f.collection_select(:skin_type_id, @skin_types, :id, :skin_type_name, {}, { class: "form-control" }) %>
  </div>
  <div class="form-group">
    <%= f.label :skincare_type_id, "使用しているスキンケア製品はありますか？", class: "form-label" %>
    <%= f.collection_select(:skincare_type_id, @skincare_types, :id, :skincare_type_name, {}, { class: "form-control" }) %>
  </div>
  <div class="form-group text-center">
    <%= f.submit '結果を見る', class: "btn btn-primary" %>
  </div>
<% end %>
